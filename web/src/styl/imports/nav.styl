nav
	width: 100%
	max-width: 1200px
	margin: 0 auto
	display: flex
	align-items: center
	padding-top: 20px
	overflow-x: auto
	overflow-y: hidden

	&::after
		content: ""
		display: block
		height: 2px
		opacity: .08
		position: absolute
		width: 100%
		background: linear-gradient(-90deg,rgba(255,255,255,0) 0,#fff 5%,#fff 90%,rgba(255,255,255,0) 100%)
		align-self: flex-end
		margin-top: 20px

.nav__link
	color: #ffffff
	font-size: 1.35rem

	a
		padding: 10px
		display: inline-block
		opacity: 0.8
		transition: 0.2s opacity linear

		&:hover
			opacity: 1

.nav__logo
	color: #ffffff
	font-size: 2rem
	margin-right: 20px
	padding-right: 30px
	border-right: 1px solid #ffffff33
	white-space: nowrap
	margin-left: 20px

	a
		opacity: 1

.nav__links-container
	display: flex
	align-items: center

	li
		list-style-type: none
